{
  "name": "react-webpack-es6-boilerplate",
  "version": "0.0.0",
  "description": "Webpack es6 boilerplate",
  "scripts": {
    "assets:build": "NODE_ENV=production webpack --config ./webpack.build.config.js --progress --profile --colors",
    "assets:serve": "NODE_ENV=development webpack-dev-server --config ./webpack.hot.assets.config.js --hot --progress --colors --port 2992 --inline --host 0.0.0.0",
    "packages:purge": "rm -rf node_modules",
    "packages:reinstall": "npm run packages:purge && npm install",
    "packages:updates": "npm-check-updates",
    "packages:upgrade": "npm-check-updates -u",
    "server:dev": "NODE_ENV=development node ./dev.server.js",
    "shrinkwrap:build": "npm-shrinkwrap --dev",
    "shrinkwrap:remove": "rm npm-shrinkwrap.json",
    "shrinkwrap:rebuild": "npm run shrinkwrap:remove && npm run package:reinstall && npm run shrinkwrap:build",
    "test": "mocha **/*.spec.js --reporter spec --timeout 15000 --bail --require ./test/_lib/bootstrap",
    "test:watch": "mocha **/*.spec.js --reporter spec -w --timeout 15000 --bail --require ./test/_lib/bootstrap",
    "test:watch:browser": "mocha --recursive --reporter spec -w --timeout 15000 2>&1 --bail --require ./test/_lib/bootstrap | report-viewer"
  },
  "keywords": [],
  "author": "Michael Chau @mikechau",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.1.2",
    "lodash": "^3.9.3",
    "react": "^0.13.3"
  },
  "devDependencies": {
    "babel": "^5.6.14",
    "babel-core": "^5.6.15",
    "babel-eslint": "^3.1.19",
    "babel-loader": "^5.2.2",
    "babel-runtime": "^5.6.15",
    "chai": "^3.0.0",
    "clean-webpack-plugin": "^0.1.3",
    "css-loader": "^0.15.1",
    "eslint": "^0.23.0",
    "eslint-loader": "^0.14.0",
    "eslint-plugin-react": "^2.6.2",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "^0.8.4",
    "html-loader": "^0.3.0",
    "html-webpack-plugin": "^1.5.2",
    "jsdom": "^3.1.2",
    "json-loader": "^0.5.2",
    "json5": "^0.4.0",
    "json5-loader": "^0.6.0",
    "less": "^2.5.1",
    "less-loader": "^2.2.0",
    "markdown-loader": "^0.1.3",
    "mocha": "^2.2.5",
    "mocha-jsdom": "^0.5.0",
    "mockery": "^1.4.0",
    "nock": "^2.6.0",
    "node-libs-browser": "^0.5.2",
    "node-sass": "^3.2.0",
    "null-loader": "^0.1.1",
    "promise-loader": "^0.1.3",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "^1.2.7",
    "react-tools": "^0.13.3",
    "report-viewer": "^0.3.1",
    "sass-loader": "^1.0.2",
    "sinon": "^1.15.4",
    "stats-webpack-plugin": "^0.1.2",
    "style-loader": "^0.12.3",
    "url-loader": "^0.5.6",
    "webpack": "^1.10.0",
    "webpack-dev-server": "^1.10.1"
  },
  "engine": "node >= 0.10.x"
}
